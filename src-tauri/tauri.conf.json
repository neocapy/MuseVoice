{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MuseVoice",
  "version": "0.1.0",
  "identifier": "com.musevoice.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MuseVoice",
        "width": 320,
        "height": 600,
        "minWidth": 48,
        "minHeight": 48,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": true,
        "transparent": false,
        "center": false,
        "x": 100,
        "y": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
